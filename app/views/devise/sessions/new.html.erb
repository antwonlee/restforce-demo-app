<div id="sign-in-form-container">
  <div class="container">
    <div class="row">
      <div class="col-md-4 col-md-offset-4 card card-block">
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :email, required: false, autofocus: true, placeholder: "Enter email", class: "form-control" %>
          </div>

          <div class="form-inputs">
            <%= f.input :password, class: "form-control", required: false %>
          </div>

          <div class="form-actions">
            <%= f.button :button, "Sign In".html_safe, class: "btn btn-block btn-primary", data: {disable_with: "<i class='fa fa-spinner fa-spin'></i>"} %>
          </div>
        <% end %>
        <br />
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
