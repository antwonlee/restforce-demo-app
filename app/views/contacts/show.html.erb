<div id="contacts-show-container">
  <div class="container">
    <table class="table table-stripe">
      <thead>
        <tr>
          <th>Id</th>
          <th>Name</th>
          <th>Email</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%= @contact.Id %></td>
          <td><%= @contact.Name %></td>
          <td><%= @contact.Email %></td>
        </tr>
      </tbody>
    </table>
    <div id="contacts-show-button-container">
      <%= link_to edit_contact_path, class: "btn btn-primary" do %>
        <i class="fa fa-pencil"></i>
      <% end %>
      <%= link_to contact_path, method: :delete, class: "btn btn-danger" do %>
        <i class="fa fa-trash-o"></i>
      <% end %>
    </div>
  </div>
</div>
